<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp" rel="stylesheet">  
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">  
    <script type="text/javascript" src="Multi-select drop down/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="Multi-select drop down/chosen.jquery.min.js"></script>
    <link rel="stylesheet" href="Multi-select drop down/chosen.min.css">    
    <link rel="stylesheet" href="admin-panel-series.css">
    <link rel="icon" href="logo.png" type="image/icon type">
    <title>Admin Panel</title>
</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <!-- Logo + name -->
                <div class="logo">
                    <img src="logo.png" alt="">
                    <h2>AE<span style="color: #df1e24;">Flix</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <!-- Dashboard -->
                <a href="admin-panel-dashboard"><span class="material-icons">grid_view</span><h3>Dashboard</h3></a>
                
                <!-- Profile -->
                <a href="admin-panel-profile" ><span class="material-icons">person</span><h3>Profile</h3></a>

                <!-- Adminss -->
                <a href="admin-panel-admin"><span class="material-icons">verified_user</span><h3>Admins</h3></a>
                
                <!-- Customers -->
                <a href="admin-panel-customers">
                    <span class="material-icons">group</span>
                    <h3>Customers</h3>
                </a>
                
                <!-- Subscriptions -->
                <a href="admin-panel-subscribers"><span class="material-icons">subscriptions</span><h3>Subscriptions</h3></a>
                
                <!-- Actors -->
                <a href="admin-panel-actors"><span class="material-icons">theater_comedy</span><h3>Actors</h3></a>

                <!-- Producers -->
                <a href="admin-panel-producers"><span class="material-icons">video_camera_front</span><h3>Producers</h3></a>

                <!-- Directors -->
                <a href="admin-panel-directors"><span class="material-icons">videocam</span><h3>Directors</h3></a>
                
                <!-- Videos -->
                <a href="admin-panel-videos" class="active"> <span class="material-icons">theaters</span><h3>Videos</h3></a>
                
                <!-- Video Requests -->                  
                <a href="admin-panel-requests">
                    <span class="material-icons">mail</span>
                    <h3>Requests</h3>
                </a>
                <!-- Customer Feedbacks -->
                <a href="admin-panel-feedbacks"><span class="material-icons">reviews</span><h3>Feedbacks</h3></a>
                
                <!-- Log Out -->
                <a href="landing-page"><span class="material-icons">logout</span><h3>Log Out</h3></a>
            </div>
        </aside>

        <!-- --------------------- END OF ASIDE ---------------------------- -->
        <main>
            <div class="main-head">
                <a id="back" href="admin-panel-videos"><span class="material-icons">arrow_back</span></a>
                <h1>Series</h1>
                <a id="add" href="#add-series"><span>Add a new Series</span></a>
            </div>
            <div class="top">
                <div class="search">
                    <input type="text" placeholder="Search">
                    <span class="material-symbols-sharp">search</span>
                </div>
            </div>
            
            <div class="sub">

            </div>

            <!-- Pop up on add new  -->
            <div class="popup" id="add-series">
                <div class="wrapper">
                    <h2>ADDING SERIES</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div class="profile-pic">
                                    <label>Series Cover</label>
                                    <div id="display-image"></div>
                                    <input type="file" id="image-input" accept="image/jpeg, image/png, image/jpg">
                                </div>
                                <div id="title" class="name">
                                    <label>Series Title</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input type="text">
                                </div>
                                <div id="desc" class="name">
                                    <label>Description</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input type="text">
                                </div>
                                <div id="release" class="name">
                                    <label>Release Date</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input type="text">
                                </div>
                                <div class="two">
                                    <div id="series" class="name">
                                        <label>Series ID</label>
    
                                        <!-- Current Name will be fetched and placed here -->
                                        <input vtype="text">
                                    </div>
                                    <div id="rate" class="name">
                                        <label>Rating</label>
    
                                        <!-- Current Name will be fetched and placed here -->
                                        <input type="text">
                                    </div>
                                </div>
                                
                                <div id="actors" class="name">
                                    <label>Actors</label>
                                    <select id="mselect" multiple="" style="width: 800px;">

                                        <!-- Previous actor options will have selected = "selected" -->
                                        <option style="color: black;" value="">Option1</option>
                                        <option style="color: black;" value="">Option2</option>
                                        <option style="color: black;" value="">Option3</option>
                                        <option style="color: black;" value="">Option4</option>
                                        <option style="color: black;" value="">Option5</option>
                                    </select>

                                    <script>
                                        $(document).ready(function(){
                                            $('#mselect').chosen();
                                           }
                                        )
                                    </script>
                                </div>
                           
                                <input type="submit" value="Add Series">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div id="myNav" class="overlay">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <div class="profile-pic">
                        <img src="Bird Box.jpg" alt="">
                    </div>
                    <div class="name">
                        <p>Name: </p>
                        <span>Bird Box</span>
                    </div>
                    <div class="desc">
                        <p>Description </p>
                        <span>A group of high school students struggle with drugs, love, 
                            social media and money as they come of age while trying to 
                            establish their identity.</span>
                    </div>
                    <div class="actors">
                        <p>Actors</p>
                        <span>
                            <ul>
                                <li>&bull; Sydney Sweeney as Ellie</li>
                                <li>&bull; Alexa Demmie as Maddie</li>
                                <li>&bull; Sydney Sweeney as Ellie</li>
                                <li>&bull; Alexa Demmie as Maddie</li>
                                <li>&bull; Sydney Sweeney as Ellie</li>
                                <li>&bull; Alexa Demmie as Maddie</li>
                            </ul>
                        </span>
                    </div>
                    <div class="line">
                        
                    </div>
                    <div class="btn">
                        <div class="update-btn">
                            <a href="#update-series" onclick="closeNav()">Update</a>
                        </div>
                        <div class="delete-btn">
                            <a href="#remove-movies" onclick="closeNav()">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirmation popup  -->
            <div class="popup" id="remove-movies">
                <div class="wrapper">
                    <h2>REMOVING SERIES</h2>
                    <div class="content">
                        <div class="confirm-container">
                            <span>Are you sure you want to delete this series?</span>
                            <div class="confirmation">
                                <a href="" id="yes">Yes</a>
                                <a href="" id="no">No</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pop up to update info  -->
            <div class="popup" id="update-series">
                <div class="wrapper">
                    <h2>UPDATING SERIES</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div class="profile-pic">
                                    <label>Series Cover</label>
                                    <div id="display-image"></div>
                                    <input type="file" id="image-input" accept="image/jpeg, image/png, image/jpg">
                                </div>
                                <div id="title" class="name">
                                    <label>Series Title</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="Bird Box" type="text">
                                </div>
                                <div id="desc" class="name">
                                    <label>Description</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="A group of high school students struggle 
                                    with drugs, love, social media and money as they come 
                                    of age while trying to establish their identity" type="text">
                                </div>
                                <div id="release" class="name">
                                    <label>Release Year</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="Bird Box" type="text">
                                </div>
                                <div class="two">
                                    <div id="seasons" class="name">
                                        <label>Seasons</label>
    
                                        <!-- Current Name will be fetched and placed here -->
                                        <input value="2" type="text">
                                    </div>
                                    <div id="rate" class="name">
                                        <label>Rating</label>
    
                                        <!-- Current Name will be fetched and placed here -->
                                        <input value="7.5" type="text">
                                    </div>
                                </div>
                                
                                <div id="actors" class="name">
                                    <label>Actors</label>
                                    <select id="mselect2" multiple="" style="width: 800px;">

                                        <!-- Previous actor options will have selected = "selected" -->
                                        <option selected = "selected" style="color: black;" value="">Option1</option>
                                        <option style="color: black;" value="">Option2</option>
                                        <option style="color: black;" value="">Option3</option>
                                        <option style="color: black;" value="">Option4</option>
                                        <option style="color: black;" value="">Option5</option>
                                    </select>

                                    <script>
                                        $(document).ready(function(){
                                            $('#mselect2').chosen();
                                            }
                                        )
                                    </script>
                                </div>
                           
                                <input type="submit" value="Save Changes">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-data">
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Seasons</th>
                            <th>Rating</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for (let i = 0; i < allSeries.length; i++) {%>
                            <tr>
                                <td><%= allSeries[i][1]%></td>
                                <td><%= allSeries[i][2]%></td>
                                <td><%= allSeries[i][3]%></td>
                                <td class="action">
                                    <a href="#update-series"><span>Update</span></a>
                                    <a href="admin-panel-series/<%= allSeries[i][0]%>" onclick="return confirm('Are you sure you want to delete this item?')"><span>Delete</span></a>
                                </td>
                            </tr>
                        <%}%>       
                    </tbody>
                </table>
            </div>
        </main>      
        <!------------------------------ END OF MAIN ------------------------->
    </div>

    <script src="admin-panel-series.js"></script>
</body>
</html>