    <link rel="icon" href="logo.png" type="image/icon type">
    <title>Admin Panel</title>
</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <!-- Logo + name -->
                <div class="logo">
                    <img src="logo.png" alt="">
                    <h2>AE<span style="color: #df1e24;">Flix</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <!-- Dashboard -->
                <a href="admin-panel-dashboard"><span class="material-icons">grid_view</span><h3>Dashboard</h3></a>
                
                <!-- Profile -->
                <a href="admin-panel-profile" ><span class="material-icons">person</span><h3>Profile</h3></a>

                <!-- Adminss -->
                <a href="admin-panel-admin"><span class="material-icons">verified_user</span><h3>Admins</h3></a>
                
                <!-- Customers -->
                <a href="admin-panel-customers">
                    <span class="material-symbols-sharp">group</span>
                    <h3>Customers</h3>
                </a>
                
                <!-- Subscriptions -->
                <a href="admin-panel-subscribers"><span class="material-icons">subscriptions</span><h3>Subscriptions</h3></a>
                
                <!-- Actors -->
                <a href="admin-panel-actors"><span class="material-icons">theater_comedy</span><h3>Actors</h3></a>

                <!-- Producers -->
                <a href="admin-panel-producers"><span class="material-icons">video_camera_front</span><h3>Producers</h3></a>

                <!-- Directors -->
                <a href="admin-panel-directors"><span class="material-icons">videocam</span><h3>Directors</h3></a>
                
                <!-- Videos -->
                <a href="admin-panel-videos" class="active"> <span class="material-symbols-sharp">theaters</span><h3>Videos</h3></a>
                
                <!-- Video Requests -->                  
                <a href="admin-panel-requests"><span class="material-icons">mail</span><h3>Requests</h3></a>
                
                <!-- Customer Feedbacks -->
                <a href="admin-panel-feedbacks"><span class="material-icons">reviews</span><h3>Feedbacks</h3></a>
                
                <!-- Log Out -->
                <a href="/same-panels/landing-page.html"><span class="material-icons">logout</span><h3>Log Out</h3></a>
            </div>
        </aside>

        <!-- --------------------- END OF ASIDE ---------------------------- -->
        <main>
            <div class="main-head">
                <a id="back" href="admin-panel-videos"><span class="material-icons">arrow_back</span></a>
                <h1>Episode</h1>
                <a id="add" href="#add-episode"><span>Add a new Episode</span></a>
            </div>
            <div class="top">
                <div class="search">
                    <input type="text" placeholder="Search">
                    <span class="material-symbols-sharp">search</span>
                </div>
            </div>
            
            <div class="sub">

            </div>

            <!-- Pop up to add new  -->
            <div class="popup" id="add-episode">
                <div class="wrapper">
                    <h2>ADDING EPISODE</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div id="series" class="name">
                                    <label>Series Title</label>
                                    <select name="season-opt" id="">
                                        <option value="none" selected disabled hidden>Select option</option>
                                        <option value="">The Queen's Gambit</option>
                                        <option value="">Euphoria</option>
                                        <option value="">Squid Game</option>
                                    </select>
                                </div>
                                <div id="season-no" class="name">
                                    <label>Season Number</label>
                                    <select name="season-opt" id="">
                                        <option value="none" selected disabled hidden>Select option</option>
                                        <option value="">1</option>
                                        <option value="">2</option>
                                        <option value="">3</option>
                                        <option value="">4</option>
                                    </select>
                                </div>
                                <div id="episode-no" class="name">
                                    <label>Episode Number</label>
                                    <select name="season-opt" id="">
                                        <option value="none" selected disabled hidden>Select option</option>
                                        <option value="">1</option>
                                        <option value="">2</option>
                                        <option value="">3</option>
                                        <option value="">4</option>
                                    </select>
                                </div>
                                <div id="title" class="name">
                                    <label>Episode Title</label>

                                    <input value="" type="text">
                                </div>
                                <div id="ep-id" class="name">
                                    <label>Episode ID</label>

                                    <input value="" type="text">
                                </div>
                                <div id="rate" class="name">
                                    <label>Video Duration</label>

                                    <input value="" type="text">
                                </div>   
                                <div id="desc" class="name">
                                    <label>Description</label>

                                    <input value="" type="text">
                                </div>
                                <div id="release" class="name">
                                    <label>Release Date</label>

                                    <input value="" type="text">
                                </div>
                                <input type="submit" value="Add Episode">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div id="myNav" class="overlay">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <div class="desc">
                        <p>Description </p>
                        <span>A group of high school students struggle with drugs, love, 
                            social media and money as they come of age while trying to 
                            establish their identity.</span>
                    </div>
                    <div class="options">
                        <div class="season-opt">
                            <p>Season</p>
                            <select name="season-opt" id="">
                                <option value="none" selected disabled hidden>Select Season Number</option>
                                <option value="">1</option>
                                <option value="">2</option>
                                <option value="">3</option>
                                <option value="">4</option>
                            </select>
                        </div>                      
                        <div class="episode-opt">
                            <p>Episode</p>
                            <select name="episode-opt" id="">
                                <option value="none" selected disabled hidden>Select Episode Number</option>
                                <option value="">1</option>
                                <option value="">2</option>
                                <option value="">3</option>
                                <option value="">4</option>
                                <option value="">5</option>
                                <option value="">6</option>
                            </select>
                        </div>                      
                    </div>
                    <div class="show">
                        <a href="#show-episode" onclick="closeNav()"><p>Show</p></a>
                    </div>
                    <div class="line">
                        
                    </div>
                </div>
            </div>

            <!-- Pop up to show info  -->
            <div class="popup" id="show-episode">
                <div class="wrapper">
                    <h2>SHOWING EPISODE</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div id="title" class="name">
                                    <label>Episode Title</label>
                                    <P>Bird Box</P>
                                </div>
                                <div id="ep-id" class="name">
                                    <label>Episode ID</label>
                                    <p>123csdxxa12</p>
                                </div>
                                <div id="duration" class="name">
                                    <label>Video Duration</label>
                                    <p>00:43:12</p>
                                </div>   
                                <div id="desc" class="name">
                                    <label>Description</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <p>A group of high school students struggle 
                                        with drugs, love, social media and money as they come 
                                        of age while trying to establish their identity</p>
                                </div>
                                <div id="release" class="name">
                                    <label>Release Date</label>
                                    <p>12-JAN-22</p>
                                </div>
                                <div class="show-buttons">
                                    <div class="update-btn">
                                        <a href="#update-episode" onclick="closeNav()">Update</a>
                                    </div>
                                    <div class="delete-btn">
                                        <a href="#remove-episode" onclick="closeNav()">Delete</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirmation popup  -->
            <div class="popup" id="remove-episode">
                <div class="wrapper">
                    <h2>REMOVING EPISODE</h2>
                    <div class="content">
                        <div class="confirm-container">
                            <span>Are you sure you want to delete this episode?</span>
                            <div class="confirmation">
                                <a href="" id="yes">Yes</a>
                                <a href="" id="no">No</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pop up to update info  -->
            <div class="popup" id="update-episode">
                <div class="wrapper">
                    <h2>UPDATING EPISODE</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div id="title" class="name">
                                    <label>Episode Title</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="Bird Box" type="text">
                                </div>
                                <div id="ep-id" class="name">
                                    <label>Episode ID</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="12cdaf23x" type="text">
                                </div>
                                <div id="rate" class="name">
                                    <label>Video Duration</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="00:04:03" type="text">
                                </div>   
                                <div id="desc" class="name">
                                    <label>Description</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="A group of high school students struggle 
                                    with drugs, love, social media and money as they come 
                                    of age while trying to establish their identity" type="text">
                                </div>
                                <div id="release" class="name">
                                    <label>Release Date</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="12-JAN-22" type="text">
                                </div>
                                <input type="submit" value="Save Changes">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-data">
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Release Year</th>
                            <th>Seasons</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Titanic</td>
                            <td>1997</td>
                            <td>1</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                        <tr>
                            <td>The Dark Knight</td>
                            <td>2008</td>
                            <td>1</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                        <tr>
                            <td>Avatar</td>
                            <td>2009</td>
                            <td>2</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                        <tr>
                            <td>Inception</td>
                            <td>2010</td>
                            <td>1</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                        <tr>
                            <td>Django Unchained</td>
                            <td>2012</td>
                            <td>1</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                        <tr>
                            <td>Sherlock Holmes</td>
                            <td>2009</td>
                            <td>1</td>
                            <td class="action"><span style="cursor:pointer" onclick="openNav()">Preview</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>      
        <!------------------------------ END OF MAIN ------------------------->
    </div>

    <script src="admin-panel-episodes.js"></script>
</body>
</html>