<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp" rel="stylesheet">  
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">    
    <link rel="stylesheet" href="admin-panel-table.css">
    <link rel="icon" href="logo.png" type="image/icon type">
    <title>Admin Panel</title>
</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <!-- Logo + name -->
                <div class="logo">
                    <img src="logo.png" alt="">
                    <h2>AE<span style="color: #df1e24;">Flix</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <!-- Dashboard -->
                <a href="admin-panel-dashboard"><span class="material-icons">grid_view</span><h3>Dashboard</h3></a>
                
                <!-- Profile -->
                <a href="admin-panel-profile" ><span class="material-icons">person</span><h3>Profile</h3></a>

                <!-- Adminss -->
                <a href="admin-panel-admin"><span class="material-icons">verified_user</span><h3>Admins</h3></a>
                
                <!-- Customers -->
                <a href="admin-panel-customers">
                    <span class="material-icons">group</span>
                    <h3>Customers</h3>
                </a>
                
                <!-- Subscriptions -->
                <a href="admin-panel-subscribers"><span class="material-icons">subscriptions</span><h3>Subscriptions</h3></a>
                
                <!-- Actors -->
                <a href="admin-panel-actors"><span class="material-icons">theater_comedy</span><h3>Actors</h3></a>

                <!-- Producers -->
                <a href=""  class="active"><span class="material-icons">video_camera_front</span><h3>Producers</h3></a>

                <!-- Directors -->
                <a href="admin-panel-directors"><span class="material-icons">videocam</span><h3>Directors</h3></a>
                
                <!-- Videos -->
                <a href="admin-panel-videos"> <span class="material-icons">theaters</span><h3>Videos</h3></a>
                
                <!-- Video Requests -->                  
                <a href="admin-panel-requests"><span class="material-icons">mail</span><h3>Requests</h3></a>
                
                <!-- Customer Feedbacks -->
                <a href="admin-panel-feedbacks"><span class="material-icons">reviews</span><h3>Feedbacks</h3></a>
                
                <!-- Log Out -->
                <a href="landing-page"><span class="material-icons">logout</span><h3>Log Out</h3></a>
            </div>
        </aside>

        <!-- --------------------- END OF ASIDE ---------------------------- -->
        <main>
            <div class="main-head">
                <h1>Producers</h1>
                <a href="#divOne"><span>Add a new Producer</span></a>
            </div>

            <!-- Pop up on add new  -->
            <div class="popup" id="divOne">
                <div class="wrapper">
                    <h2>ADDING PRODUCER</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form action="#" method="post">
                                <div class="name">
                                    <label>Producer Name</label>
                                    <input placeholder="Enter producer name" name="name" type="text">
                                </div>
                                <div class="gender">
                                    <label>Gender</label> 
                                    <select name="picker" id="gender-spec">
                                        <option value="" selected >Choose gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                      </select>
                                </div>
                                <input type="submit" value="Add Producer">                          
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="top">
                <div class="search">
                    <input type="text" placeholder="Search">
                    <span class="material-symbols-sharp">search</span>
                </div>
            </div>
            
            <div class="sub">

            </div>

            <div class="table-data">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Movies</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody> 
                        <%for (let i = 0; i < producers.length; i++) {%>
                            <tr>
                                <td><%= producers[i][1]%></td>
                                <td><%= producers[i][2]%></td>
                                <td><%= producers[i][3]%></td>
                                <td class="action">
                                    <a href="#update-producer"><span>Update</span></a>
                                    <a href="admin-panel-producers/<%= producers[i][0]%>" onclick="return confirm('Are you sure you want to delete this item?')"><span>Delete</span></a>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>

            <!-- Confirmation popup  -->
            <div class="popup" id="remove-producer">
                <div class="wrapper">
                    <h2>REMOVING PRODUCER</h2>
                    <div class="content">
                        <div class="confirm-container">
                            <span>Are you sure you want to delete this producer?</span>
                            <div class="confirmation">
                                <a href="" id="yes">Yes</a>
                                <a href="" id="no">No</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pop up to update info  -->
            <div class="popup" id="update-producer">
                <div class="wrapper">
                    <h2>UPDATING PRODUCER</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div class="name">
                                    <label>Producer Name</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="Sydney Sweeney" type="text">
                                </div>

                                <div class="gender">
                                    <label>Gender</label> 
                                    <select  id="gender-spec">
                                        <option value="Male">Male</option>
                                        <option selected value="Female">Female</option>
                                    </select>
                                </div>                                
                                <input type="submit" value="Save Changes">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>      
        <!------------------------------ END OF MAIN ------------------------->
    </div>

    <script src="admin-panel-producers.js"></script>
</body>
</html>