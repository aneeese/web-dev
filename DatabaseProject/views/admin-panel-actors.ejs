        <main>
            <div class="main-head">
                <h1>Actors</h1>
                <a href="#divOne"><span>Add a new Actor</span></a>
            </div>

            <!-- Pop up on add new  -->
            <div class="popup" id="divOne">
                <div class="wrapper">
                    <h2>ADDING ACTOR</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div class="name">
                                    <label>Actor Name</label>
                                    <input placeholder="Enter actor name" type="text">
                                </div>
                                <div class="gender">
                                    <label>Gender</label> 
                                    <select  id="gender-spec">
                                        <option selected disabled hidden>Choose gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                      </select>
                                </div>                                
                                <input type="submit" value="Add Actor">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="top">
                <div class="search">
                    <input type="text" placeholder="Search">
                    <span class="material-symbols-sharp">search</span>
                </div>
            </div>
            
            <div class="sub">

            </div>

            <div id="myNav" class="overlay">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <div class="profile-pic">
                        <img src="Aaron Eckhart.jpg" alt="">
                    </div>
                    <div class="name">
                        <p>Name: </p>
                        <span>Aaron Eckhart</span>
                    </div>
                    <div class="gender">
                        <p>Gender:</p>
                        <span>Male</span>
                    </div>
                    <div class="characters-played">
                        <p>Movies Done</p>
                        <span>
                            <ul>
                                <li>&bull; London Has Fallen</li>
                                <li>&bull; I, Frakenstein</li>
                            </ul>
                        </span>
                    </div>
                    <div class="btn">
                        <div class="update-btn">
                            <a href="#update-actor" onclick="closeNav()">Update</a>
                        </div>
                        <div class="delete-btn">
                            <a href="#delete-actor" onclick="closeNav()">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirmation popup  -->
            <div class="popup" id="delete-actor">
                <div class="wrapper">
                    <h2>REMOVING ACTOR</h2>
                    <div class="content">
                        <div class="confirm-container">
                            <span>Are you sure you want to delete this actor?</span>
                            <div class="confirmation">
                                <a href="" id="yes">Yes</a>
                                <a href="" id="no">No</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pop up to update info  -->
            <div class="popup" id="update-actor">
                <div class="wrapper">
                    <h2>UPDATING ACTOR</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        <div class="content-container">
                            <form>
                                <div class="profile-pic">
                                    <label>Your Profile Pic</label>
                                    <div id="display-image"></div>
                                    <input type="file" id="image-input" accept="image/jpeg, image/png, image/jpg">
                                </div>
                                <div class="name">
                                    <label>Actor Name</label>

                                    <!-- Current Name will be fetched and placed here -->
                                    <input value="Sydney Sweeney" type="text">
                                </div>

                                <div class="gender">
                                    <label>Gender</label> 
                                    <select  id="gender-spec">
                                        <option value="Male">Male</option>
                                        <option selected value="Female">Female</option>
                                    </select>
                                </div>                                
                                <input type="submit" value="Save Changes">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

